<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fu.springbootdynamicdatasource2.mapper.mysql2.MySQL2UserMapper">

    <sql id="baseColumn">
        id,`name`
    </sql>

    <select id="selectById" resultType="com.fu.springbootdynamicdatasource2.entity.User">
        select <include refid="baseColumn"/> from user
        <where>
            <if test="id != null">
                id = #{id}
            </if>
        </where>
    </select>

</mapper>
